<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: orange;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.TransportCompanySystem.Client.Controllers.AdminsInSystemController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="120.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@LogoDDPCMini.jpg" />
                     </image>
                  </ImageView>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="60.0">
                     <children>
                        <Label text="Administratorzy" textFill="#bf1313">
                           <font>
                              <Font name="System Bold Italic" size="30.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="500.0" spacing="2.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#delete" text="Usuń">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#editAdmin" text="Edytuj">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Button>
                              <Button fx:id="detailsButton" mnemonicParsing="false" onAction="#details" text="Szczegóły">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#refresh" text="Odśwież">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Button>
                              <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnToMain" text="Wróc">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <TableView fx:id="adminTable" prefHeight="600.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="userID" prefWidth="205.0" text="ID Użytkownika" />
                  <TableColumn fx:id="login" prefWidth="242.0" text="Login" />
                  <TableColumn fx:id="name" prefWidth="315.0" text="Imię" />
                <TableColumn fx:id="surname" minWidth="0.0" prefWidth="397.0" text="Nazwisko" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="50.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
